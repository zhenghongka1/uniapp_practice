page .goods_detail swiper {
  height: 700rpx;
}
page .goods_detail swiper swiper-item image {
  width: 100%;
  height: 100%;
}
page .goods_detail .goods_content {
  padding-bottom: 100rpx;
}
page .goods_detail .goods_content .goods_info {
  background-color: white;
  padding: 40rpx 15rpx;
